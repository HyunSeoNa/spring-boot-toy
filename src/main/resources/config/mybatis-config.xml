        <plugin interceptor="com.github.pagehelper.PageInterceptor">
            <property name="helper-dialect" value="mysql"/>
            <property name="reasonable" value="true"/>
            <property name="support-methods-arguments" value="true"/>
        </plugin>
    </plugins>-->
</configuration>